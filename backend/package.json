{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:show": "NODE_PATH=./node_modules node -r ts-node/register/transpile-only ./node_modules/typeorm/cli.js -d ./database/data-source.ts migration:show",
    "migration:run": "NODE_PATH=./node_modules node -r ts-node/register/transpile-only ./node_modules/typeorm/cli.js -d ./database/data-source.ts migration:run",
    "migration:revert": "NODE_PATH=./node_modules node -r ts-node/register/transpile-only ./node_modules/typeorm/cli.js -d ./database/data-source.ts migration:revert"
  },
  "dependencies": {
    "@fastify/static": "^8.3.0",
    "@nestjs/common": "11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "11.1.9",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-fastify": "^11.1.11",
    "@nestjs/platform-socket.io": "^11.1.12",
    "@nestjs/swagger": "^11.2.4",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.12",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "fastify": "5.6.2",
    "pg": "^8.17.1",
    "pg-error-constants": "^1.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "socket.io": "^4.8.3",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.2",
    "@nestjs/cli": "11.0.14",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.9",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "30.0.0",
    "@types/node": "25.0.1",
    "@types/supertest": "6.0.3",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.5.0",
    "jest": "30.2.0",
    "prettier": "3.7.4",
    "source-map-support": "0.5.21",
    "supertest": "7.1.4",
    "ts-jest": "29.4.6",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typeorm-ts-node-esm": "^0.3.20",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "overrides": {
    "@fastify/middie": ">=9.1.0"
  }
}
